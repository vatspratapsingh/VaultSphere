# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vaultsphere
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vaultsphere
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=5001
NODE_ENV=development

# SSL/TLS Configuration
SSL_ENABLED=false
HTTPS_PORT=5443
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# AWS Configuration
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Secrets Manager
SECRETS_MANAGER_ENABLED=false
DB_SECRET_NAME=vaultsphere/database
JWT_SECRET_NAME=vaultsphere/jwt
APP_SECRET_NAME=vaultsphere/application

# CloudWatch Monitoring
CLOUDWATCH_ENABLED=false
CLOUDWATCH_LOG_GROUP=/aws/ec2/vaultsphere
CLOUDWATCH_LOG_STREAM=backend

# Alerting Configuration
ALERTS_ENABLED=false
SNS_TOPIC_ARN=arn:aws:sns:eu-north-1:123456789012:VaultSphere-Alerts

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PASSWORD_RESET_RATE_LIMIT_MAX=3

# Admin Configuration
ADMIN_IP_WHITELIST=127.0.0.1,::1

# MFA Configuration
MFA_ISSUER=VaultSphere
MFA_SERVICE_NAME=VaultSphere

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log